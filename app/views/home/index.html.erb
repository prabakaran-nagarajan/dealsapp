<div class="center hero-unit">
  <h1>Chronus Deals</h1>
</div>
 <h2> Top Deals </h2>
<% if @deals.length == 0%>
   <p> No Deals available</p>
<% else %>


<ol class ="deals">

 <% @deals.each do |deal| %>
  <li> 
    <span class="content">
    <%=link_to deal.dealname, deal_path(deal) %><br>
    Location: <%= deal.location %><br>
    DealType: <%= deal.dealtype %><br>
    Price: <%= deal.actualprice %><br>
    DiscountPrice: <%= deal.discountprice %><br>
    </span>
  </li>
 <% end %>
</ol>
<% end %>


